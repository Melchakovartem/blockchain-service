<div class="container">
  Contract address: <%= @contract.address %><br>
</div>
  <div class="tabs" style="max-width: 30em;">
    <input type="radio" name="tabs" id="tab-1" checked="checked" />
    <label for="tab-1" class="tabTitle" title="Token transfers"><span><span><span>Token transfers</span></span></span></label>
    <div class="tabContent">
      <%= render partial: 'transfers', locals: { transfers: @transfers } %>
    </div>

    <input type="radio" name="tabs" id="tab-2" />
    <label for="tab-2" class="tabTitle" title="Code"><span><span><span>Code</span></span></span></label>
    <div class="tabContent">
      <%= @contract.code %>
    </div>

    <input type="radio" name="tabs" id="tab-3" />
    <label for="tab-3" class="tabTitle" title="ABI"><span><span><span>ABI</span></span></span></label>
    <div class="tabContent">
      <%= @contract.abi %>
    </div>
    <input type="radio" name="tabs" id="tab-4" />
    <label for="tab-4" class="tabTitle" title="Read contract"><span><span><span>Read contract</span></span></span></label>
    <div class="tabContent">
      Contract
    </div>
  </div>